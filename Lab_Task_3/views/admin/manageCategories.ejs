<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Add this to your layout.ejs (or in the header section of your HTML files) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

  <title>Manage Categories</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header class="mb-4">
    <h1 class="text-center">Manage Categories</h1>
  </header>

  <div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>Manage Categories</h2>
      <a href="/admin/category/newForm" class="btn btn-primary">Create New Category</a>
    </div>
  
    <!-- Categories Table -->
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% categories.forEach(category => { %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.description %></td>
            <td><%= category.price %></td>
            <td>
              <!-- Edit Button -->
              <a href="/admin/category/<%= category._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              
              <!-- Delete Form (with method-override) -->
              <form action="/admin/category/<%= category._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>

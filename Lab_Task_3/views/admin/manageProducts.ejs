<!-- views/admin/manageProducts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <title>Manage Products</title>
</head>
<body>
  <div class="container mt-5">
    <h2>Manage Products</h2>
    <a href="/admin/products/newForm" class="btn btn-primary">Create New Product</a>

  
    <!-- Products Table -->
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>Color</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.color %></td>
            <td><%= product.price %></td>
            <td><%= product.quantity %></td>
            <td>
              <!-- Edit Product -->
              <a href="/admin/products/<%= product._id %>" class="btn btn-warning btn-sm">Edit</a>
              <!-- Delete Product -->
              <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
